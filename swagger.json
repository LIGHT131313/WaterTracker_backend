  "components": {
    "schemas": {
      "RegistrationLoginRequest": {
        "required": ["email", "password"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com",
            "pattern": "^\\w+([\\.-]?\\w+)*@\\w+([\\.-]?\\w+)*(\\.\\w{2,3})+$"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "qwerty123",
            "minimum": 8,
            "maximum": 64
          }
        }
      },
      "PassRequest": {
        "required": ["email"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com",
            "pattern": "^\\w+([\\.-]?\\w+)*@\\w+([\\.-]?\\w+)*(\\.\\w{2,3})+$"
          }
        }
      },
      "PassResponse": {
        "required": ["message"],
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Password reset link has been sent to your email"
          }
        }
      },
      "ResetPassRequest": {
        "required": ["resetToken", "newPassword"],
        "type": "object",
        "properties": {
          "resetToken": {
            "type": "string",
            "example": "VwVWRPpuYN-AEZy2NGPwh"
          },
          "newPassword": {
            "type": "string",
            "example": "qwerty1234",
            "minimum": 8,
            "maximum": 64,
            "format": "password"
          }
        }
      },
      "ResetPassResponse": {
        "required": ["message"],
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Password has been reset successfully"
          }
        }
      },
      "RegistrationLoginResponse": {
        "required": ["user", "token"],
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY1ODZjOWRjMTlmOTcxMjY5OTMzODQ5MCIsImlhdCI6MTcwMzMzMzE4MiwiZXhwIjoxNzAzNDE1OTgyfQ._o8tF4gIcZpycR5jiu9s5-CQ4EhkwzMomatg6sA-4do"
          },
          "user": {
            "required": ["email", "gender", "avatarURL", "waterRate"],
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "example": "user@example.com"
